{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Generate Win64 Installer",
            "type": "shell",
            "command": "gen_installer \"XR Support\" \"0.1\" \"KnightVR\"",
            "options": {
                "cwd": "${workspaceFolder}/XRBuild/XRPC/Installer"
            },
            "problemMatcher": []
        },
        {
            "label": "Compile Win64 Installer",
            "type": "shell",
            "command": "\"${workspaceFolder}\\XRBuild\\Inno\\Inno Setup 6\\Compil32.exe\" /cc XRSupport_installer.iss",
            "options": {
                "cwd": "${workspaceFolder}\\XRBuild\\XRPC\\Installer"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Win64",
            "type": "shell",
            "command": "Unity.exe -quit -projectPath ${workspaceFolder} -build_target Win64 -executeMethod Autobuilder.Win64Build",
            "options": {
                "cwd": "C:/Program Files/Unity/Hub/Editor/2019.3.13f1/Editor/"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Android",
            "type": "shell",
            "command": "Unity.exe -projectPath ${workspaceFolder} -build_target Android -executeMethod Autobuilder.AndroidBuild",
            "options": {
                "cwd": "C:/Program Files/Unity/Hub/Editor/2019.3.13f1/Editor/"
            },
            "problemMatcher": []
        }
    ]
}