    "version": "2.0.0",
    "tasks": [
        {
            "label": "Generate Win64 Installer",
            "type": "shell",
            "command": "gen_installer \"XR Support\" \"0.1\" \"KnightVR\"",
            "options": {
                "cwd": "${workspaceFolder}/BuildRelease/Oculus PC VR/Installer"
            },
            "problemMatcher": []
        },
        {
            "label": "Compile Win64 Installer",
            "type": "shell",
            "command": "\"${workspaceFolder}\\BuildRelease\\Inno\\Inno Setup 6\\Compil32.exe\" /cc XRSupport_installer.iss",
            "options": {
                "cwd": "${workspaceFolder}\\BuildRelease\\Oculus PC VR\\Installer"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Win64",
            "type": "shell",
            "command": "Unity.exe -quit -batchmode -projectPath ${workspaceFolder} -buildWindows64Player \"${workspaceFolder}\\BuildRelease\\Oculus PC VR\\Release\\Win64\\XRSupport.exe\"",
            "options": {
                "cwd": "C:/Program Files/Unity/Hub/Editor/2019.3.13f1/Editor/"
            },
            "problemMatcher": []
        }
    ]
}